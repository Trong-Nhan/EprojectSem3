@model IEnumerable<OnlineOrdersConnection.Frame>

<h4 class="title">
    <span class="pull-left"><span class="text"><strong>Related</strong> Products</span></span>
    <span class="pull-right">
        <a class="left button" href="#myCarousel-1" data-slide="prev"></a><a class="right button" href="#myCarousel-1" data-slide="next"></a>
    </span>
</h4>
<div id="myCarousel-1" class="carousel slide">
    <div class="carousel-inner">
        <div class="active item">
            <ul class="thumbnails listing-products">
                @foreach (var item in Model)
                {
                    <li class="span3">
                        <div class="product-box">
                            <span class="sale_tag"></span>
                            <a href="@Url.Action("Details","Products",new { id = @item.Id })"><img alt="" src="~/Asset/themes/images/imgFrames/@item.Image_1"></a><br />
                            <a href="@Url.Action("Details","Products",new { id = @item.Id })" class="title">@item.Frames</a><br />
                            <a href="#" class="category">Phasellus consequat</a>
                            <p class="price">@item.Price</p>
                        </div>
                    </li>
                }
            </ul>
        </div>
        <div class="item">
            <ul class="thumbnails listing-products">
                @foreach (var item in Model)
                {
                    <li class="span3">
                        <div class="product-box">
                            <span class="sale_tag"></span>
                            <a href="@Url.Action("Details","Products",new { id = @item.Id })"><img alt="" src="~/Asset/themes/images/imgFrames/@item.Image_1"></a><br />
                            <a href="@Url.Action("Details","Products",new { id = @item.Id })" class="title">@item.Frames</a><br />
                            <a href="#" class="category">Phasellus consequat</a>
                            <p class="price">@item.Price</p>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>