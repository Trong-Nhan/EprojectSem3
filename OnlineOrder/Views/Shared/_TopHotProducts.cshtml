@model IEnumerable<OnlineOrdersConnection.Frame>

<div class="row">
    <div class="span12">
        <h4 class="title">
            <span class="pull-left"><span class="text"><span class="line">What's <strong>Hot</strong></span></span></span>
            <span class="pull-right">
                <a class="left button" href="#myCarousel" data-slide="prev"></a><a class="right button" href="#myCarousel" data-slide="next"></a>
            </span>
        </h4>
        <div id="myCarousel" class="myCarousel carousel slide">
            <div class="carousel-inner">
                <div class="active item">
                    <ul class="thumbnails">
                        @foreach (var item in Model)
                        {
                            <li class="span3">
                                <div class="product-box">
                                    <span class="sale_tag"></span>
                                    <a href="@Url.Action("Details","Products",new { id = @item.Id })"><img alt="" src="~/Asset/themes/images/imgFrames/@item.Image_1"></a><br />
                                    <a href="@Url.Action("Details","Products",new { id = @item.Id })" class="title">@item.Frames</a><br />
                                    <a href="#" class="category">Phasellus consequat</a>
                                    <p class="price">@item.Price</p>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
                <div class="item">
                    <ul class="thumbnails">
                        @foreach (var item in Model)
                        {
                            <li class="span3">
                                <div class="product-box">
                                    <span class="sale_tag"></span>
                                    <a href="@Url.Action("Details","Products",new { id = @item.Id })"><img alt="" src="~/Asset/themes/images/imgFrames/@item.Image_1"></a><br />
                                    <a href="@Url.Action("Details","Products",new { id = @item.Id })" class="title">@item.Frames</a><br />
                                    <a href="#" class="category">Phasellus consequat</a>
                                    <p class="price">@item.Price</p>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>