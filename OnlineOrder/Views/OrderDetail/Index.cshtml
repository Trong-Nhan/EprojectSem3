@model IEnumerable<OnlineOrdersConnection.Cart>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="header_text sub">
    <img class="pageBanner" src="~/Asset/themes/images/pageBanner.png" alt="New products">
    <h4><span>Shopping Cart</span></h4>
</section>
<section class="main-content">
    <div class="row">
        <div class="span9">
            <h4 class="title"><span class="text"><strong>Your</strong> Cart</span></h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Frame Id</th>
                        <th>Quantity</th>
                        <th>Size Id</th>
                        <th>Image</th>
                        <th>Unit Price</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @using (Html.BeginForm("Update", "OrderDetail", FormMethod.Post))
                            {
                                <td><input class="input-mini" readonly name="framesid" value="@item.FramesId" /></td>
                                <td><input type="number" class="input-mini" value="@item.Quantity" min="1" max="1000" name="quantity" required></td>
                                <td><input class="input-mini" readonly name="sizeid" value="@item.SizeId" /></td>
                                <td><input class="input-mini" readonly name="image" value="@item.Image" /></td>
                                <td><input class="input-mini" readonly name="price" value="@item.Price" /></td>
                                <td>$@item.TotalPrice</td>
                                <td><input type="submit" class="btn" value="Update" /></td>
                            }
                            <td>
                                <a href="@Url.Action("Delete","OrderDetail",new { framesid = @item.FramesId, sizeid=item.SizeId})" class="btn">Delete</a>
                            </td>
                        </tr>
                    }
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td><strong>$@ViewBag.TotalPrice</strong></td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
                </tbody>
            </table>
            <hr />
            <p class="buttons center">
                <a href="@Url.Action("Index","Checkout")" class="btn btn-inverse">Checkout</a>
            </p>
        </div>
        <div class="span3 col">
            @Html.Partial("_SubCategories", OnlineOrder.Models.BUS.ProductTypesBUS.ListProduct())
            @Html.Partial("_RandomizeProducts", OnlineOrder.Models.BUS.OnlineOrdersBUS.RandomizeProduct())
        </div>
    </div>
</section>

<title>MyImage | Your Cart</title>

