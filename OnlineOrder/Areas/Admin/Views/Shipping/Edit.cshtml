@model OnlineOrdersConnection.Shipping
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/MainLayoutAdmin.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-md-4">
            <div class="box box-info">
                <div class="box-header">
                    <h3 class="box-title">Edit Shipping</h3>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm("Edit", "Shipping", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label for="">Id</label>
                            <input type="text" class="form-control" id="" name="Id" value="@Model.Id" readonly>
                        </div>
                        <div class="form-group">
                            <label for="">Name</label>
                            <input type="text" class="form-control" id="" name="Name" value="@Model.Name" required>
                        </div>
                        <div class="form-group">
                            <label for="">Price</label>
                            <input type="number" class="form-control" id="" name="Price" value="@Model.Price" required>
                        </div>
                        <div class="form-group">
                            <label for="">Status</label>
                            <select name="Status" class="form-control">
                                @if (Model.Status == 1)
                                {
                                    <option value="0">Open</option>
                                    <option value="1" selected>Blocked</option>
                                }
                                else
                                {
                                    <option value="0" selected>Open</option>
                                    <option value="1">Blocked</option>
                                }

                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Update</button>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
