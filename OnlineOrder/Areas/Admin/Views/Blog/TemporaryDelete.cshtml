@model OnlineOrdersConnection.Blog
@{
    ViewBag.Title = "TemporaryDelete";
    Layout = "~/Areas/Admin/Views/Shared/MainLayoutAdmin.cshtml";
}

<section class="content">
    <div class="box box-primary">
        @using (Html.BeginForm("TemporaryDelete", "Blog", FormMethod.Post))
        {
            <div class="box-body">
                <div class="col-md-9">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Temporary Delete Blog</h3>
                        </div>
                        <div class="panel-body">
                            <div class="form-group">
                                <label for="">Title</label>
                                <input name="Title" type="text" class="form-control" value="@Model.Title" readonly>
                            </div>
                            <div class="form-group">
                                <label for="">Summary</label>
                                <input name="Summary" type="text" class="form-control" value="@Model.Summary" readonly>
                            </div>
                            <div class="form-group">
                                <label for="">Content</label>
                                <textarea id="" name="Content" class="form-control" cols="40" rows="15" readonly>@Model.Content</textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Id</h3>
                        </div>
                        <div class="panel-body">
                            <input type="text" class="form-control" name="Id" value="@Model.Id" readonly>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Image</h3>
                        </div>
                        <div class="panel-body">
                            <div class="input-group">
                                <input type="file" class="form-control" id="image" name="Image" value="@Model.Image" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">View</h3>
                        </div>
                        <div class="panel-body">
                            <div class="input-group">
                                <input type="number" class="form-control" name="View" value="@Model.View" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Status</h3>
                        </div>
                        <div class="panel-body">
                            <select name="Status" class="form-control">
                                @if (Model.Status == 1)
                                {
                                    <option value="1" selected>Blocked</option>
                                }
                                else
                                {
                                    <option value="0" selected>Open</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <a href="@Url.Action("Index","Blog")" class="btn btn-default">Cancel</a>
                <button type="submit" class="btn btn-primary pull-right">Temporary Delete</button>
            </div>
        }
    </div>
</section>


