@model OnlineOrdersConnection.Blog
@{ ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/MainLayoutAdmin.cshtml"; }
<section class="content">
    <div class="box box-primary">
        @using (Html.BeginForm("Edit", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
<form action="" method="POST" role="form" enctype="multipart/form-data">
    <div class="box-body">
        <div class="col-md-9">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Edit Blog</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="">Title</label>
                        <input name="Title" type="text" class="form-control" value="@Model.Title" required>
                    </div>
                    <div class="form-group">
                        <label for="">Summary</label>
                        <input name="Summary" type="text" class="form-control" value="@Model.Summary" required>
                    </div>
                    <div class="form-group">
                        <label for="">Content</label>
                        <textarea id="" name="Content" class="form-control" cols="40" rows="15" required>@Model.Content</textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Id</h3>
                </div>
                <div class="panel-body">
                    <input type="text" class="form-control" name="Id" value="@Model.Id" readonly>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Image</h3>
                </div>
                <div class="panel-body">
                    <div class="input-group">
                        <input type="file" class="form-control" id="image" name="Image" value="@Model.Image">
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">View</h3>
                </div>
                <div class="panel-body">
                    <div class="input-group">
                        <input type="number" class="form-control" name="View" value="@Model.View" required>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Status</h3>
                </div>
                <div class="panel-body">
                    <select name="Status" class="form-control">
                        @if (Model.Status == 1)
                        {
                            <option value="0">Open</option>
                            <option value="1" selected>Blocked</option>
                        }
                        else
                        {
                            <option value="0" selected>Open</option>
                            <option value="1">Blocked</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="box-footer">
        <a href="@Url.Action("Index","Blog")" class="btn btn-default">Cancel</a>
        <button type="submit" class="btn btn-primary pull-right">Update</button>
    </div>
</form>}
    </div>
</section>

