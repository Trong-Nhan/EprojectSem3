@model IEnumerable<OnlineOrdersConnection.Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/MainLayoutAdmin.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-md-12">
                            <h3 class="panel-title">List Blog</h3>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Title</th>
                                <th>Image</th>
                                <th>Status</th>
                                <th>View</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Id
                                    </td>
                                    <td>
                                        @item.Title
                                    </td>
                                    <td>
                                        <img src="~/Asset/themes/images/imgBlogs/@item.Image" style="width:50px; height:50px;" alt="Alternate Text" />
                                    </td>
                                    <td>
                                        @item.Status
                                    </td>
                                    <td>
                                        @item.View
                                    </td>
                                    <td>
                                        <form action="" method="POST" class="form-inline" role="form">
                                            <a href="@Url.Action("Edit","Blog",new { id = @item.Id})">
                                                <i class="btn btn-xs btn-danger fa fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("TemporaryDelete","Blog",new { id = @item.Id})">
                                                <i class="btn btn-xs btn-warning fa fa-trash"></i>
                                            </a>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="text-center">
                    </div>
                    <div class="text-center">
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

