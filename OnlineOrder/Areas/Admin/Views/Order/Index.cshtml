@model PagedList.IPagedList<OnlineOrdersConnection.Order>
@using PagedList.Mvc;
@using Microsoft.AspNet.Identity;

@{ ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/MainLayoutAdmin.cshtml";
}
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-md-12">
                            <h3 class="panel-title">List Order</h3>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Created At</th>
                                <th>Customer Id</th>
                                <th>Payment Id</th>
                                <th>Shipping Id</th>
                                <th>Total Price</th>
                                <th>Status</th>
                                <th colspan="3">Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.CreatedAt</td>
                                    <td>@item.CustId</td>
                                    <td>@item.PaymentId</td>
                                    <td>@item.ShippingId</td>
                                    <td>@item.TotalPrice</td>
                                    @switch (item.Status)
                                    {
                                        case 0:
                                            <td>Not Approved</td>
                                            break;
                                        case 1:
                                            <td>Delivering</td>
                                            break;
                                        case 2:
                                            <td>Delivered</td>
                                            break;
                                        case 3:
                                            <td>Cancelled</td>
                                            break;
                                    }
                                    <td>
                                        <input type="hidden" value="@item.Id" id="orderid" />
                                        <a href="#" data-id="@item.Id" class="btn-details"><span>Details</span></a>
                                    </td>
                                    <td colspan="2">
                                        <form action="@Url.Action("Update","Order")" method="get" class="form-inline">
                                            <input type="hidden" name="orderid" value="@item.Id" />
                                            <select name="status" class="btn btn-default">
                                                <option value="0" selected hidden>Please choose</option>
                                                <option value="0">Not Approved</option>
                                                <option value="1">Delivering</option>
                                                <option value="2">Delivered</option>
                                                <option value="3">Cancelled</option>
                                            </select>
                                            <input type="submit" class="btn btn-default" value="Update" />
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="text-center">
                    </div>
                    <div class="text-center">
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="DetailsModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content" style="width:100%">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Order Details</h4>
            </div>
            <div class="modal-body" style="height:90px;">
                <div style="float:left" class="col-md-12">
                    <span class=col-md-2>Id Order</span>
                    <span class=col-md-2>Frames Id</span>
                    <span class=col-md-1>Size Id</span>
                    <span class=col-md-2>Quantity</span>
                    <span class=col-md-2>Price</span>
                    <span class=col-md-2>Image</span>
                    <span class=col-md-1>Total Price</span>
                </div>
                <div id="DetailsList">

                </div>

            </div>
            <div class="modal-footer" style="height:65px;">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
