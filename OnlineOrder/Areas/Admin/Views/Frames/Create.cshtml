
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/MainLayoutAdmin.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add Frames</h3>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm("Create", "Frames", FormMethod.Post, new {enctype = "multipart/form-data"}))
                    {
                        <form action="" method="POST" role="form" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="">Image_1</label>
                                        <div class="input-group">
                                            <input type="file" class="form-control" id="image" name="Image_1" value="" required>                                            
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="">Id</label>
                                        <input type="text" class="form-control" name="Id" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="">Frames</label>
                                        <input type="text" class="form-control" name="Frames" value="" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="">Price</label>
                                        <input type="number" class="form-control" name="Price" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="">Frame Types</label>
                                        @Html.DropDownList("FrameTypeId", null, new { @class = "form-control" });
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label for="">Status</label>
                                    <select name="Status" class="form-control">
                                        <option value="0">Open</option>
                                        <option value="1">Blocked</option>
                                    </select>
                                </div>
                            </div>
                            <div class="box-footer">
                                <a href="@Url.Action("Index","Frames")" class="btn btn-default">Cancel</a>
                                <button type="submit" class="btn btn-primary pull-right">Create</button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
</section>



